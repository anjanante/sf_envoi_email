{% extends 'base.html.twig' %}

{% block title %}Envoi d'email{% endblock %}


{% block body %}

<div class="m-portlet">
    <div class="m-portlet__head">
        <div class="m-portlet__head-caption">
            <div class="m-portlet__head-title">
                <span class="m-portlet__head-icon m--hide">
                    <i class="la la-gear"></i>
                </span>
                <h3 class="m-portlet__head-text">
                    Veuillez compl√©ter les informations pour l'envoi
                </h3>
            </div>
        </div>
    </div>
    <!--begin::Form-->
    {{ form_start(messagerie, { 'attr' : {'class': 'm-form m-form--fit m-form--label-align-right m-form--group-seperator-dashed"'}}) }}
        <div class="m-portlet__body">
            <div class="form-group m-form__group row">
                <label class="col-lg-2 col-form-label">
                    {{ form_label(messagerie.destinataire) }}<span class="m--font-danger">*</span>
                </label>
                <div class="col-lg-8">
                    {{ form_widget(messagerie.destinataire,{ 'attr' : {'class': 'form-control m-input', 'placeholder':'destinataire@adress.com'}}) }}
                </div>
            </div>
            <div class="form-group m-form__group row">
                <label class="col-lg-2 col-form-label">
                    {{ form_label(messagerie.sujet) }}<span class="m--font-danger">*</span>
                </label>
                <div class="col-lg-8">
                    {{ form_widget(messagerie.sujet,{ 'attr' : {'class': 'form-control m-input', 'placeholder':'votre sujet'}}) }}
                </div>
            </div>
            <div class="m-form__group m-form__group--last form-group row">
                <label class="col-lg-2 col-form-label">
                    {{ form_label(messagerie.message) }} 
                </label>
                <div class="col-lg-8">
                    {{ form_widget(messagerie.message,{ 'attr' : {'class': 'form-control m-input', 'placeholder':'Votre message'}}) }}
                </div>
            </div>
        </div>
        <div class="m-portlet__foot m-portlet__no-border m-portlet__foot--fit">
            <div class="m-form__actions m-form__actions--solid">
                <div class="row">
                    <div class="col-lg-2"></div>
                    <div class="col-lg-6">
                        <button type="submit" class="btn btn-accent m-btn m-btn--custom m-btn--icon m-btn--air m-btn--pill">
                            Envoyer
                        </button>
                        <button type="reset" class="btn btn-secondary m-btn m-btn--custom m-btn--icon m-btn--air m-btn--pill">
                            Annuler
                        </button>
                    </div>
                </div>
            </div>
        </div>
    {{ form_end(messagerie) }}
    <!--end::Form-->
</div>
    
{% endblock %}
