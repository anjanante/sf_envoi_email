<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		<link href="{{asset('css/style.bundle.css')}}" rel="stylesheet" type="text/css" />
         <style>
            span.m--font-danger ul{
                list-style-type: none;
                margin-left: -19px;
            }
        </style>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body class="m--skin- m-header--fixed m-header--fixed-mobile m-aside-left--enabled m-aside-left--skin-dark m-aside-left--offcanvas m-footer--push m-aside--offcanvas-default">
        <!-- begin:: Page -->
		<div class="m-grid m-grid--hor m-grid--root m-page">
			<div class="m-grid__item m-grid__item--fluid m-grid m-grid--hor m-login m-login--signin m-login--2 m-login-2--skin-3" id="m_login" style="background-image: url({{asset('img/bg/bg-2.jpg')}});">
				<div class="m-grid__item m-grid__item--fluid	m-login__wrapper">
                    <div class="m-login__container">
                        <div class="m-login__logo">
                            <a href="{{path('app_login')}}">
                                <img src="{{asset('img/logo.png')}}" width="160" height="130">
                            </a>
                        </div>
                        {% block body %}{% endblock %}
                    </div><!--end m-login__container-->
                </div>
            </div>
        </div>

		<script src="{{asset('js/vendors.bundle.js')}}" type="text/javascript"></script>
		<script src="{{asset('js/scripts.bundle.js')}}" type="text/javascript"></script>
		<script src="{{asset('js/login.js')}}" type="text/javascript"></script>
        {% block javascripts %}
            <script type="text/javascript">
                var login = $('#m_login');
                var displaySignUpForm = function() {
                    login.removeClass('m-login--forget-password');
                    login.removeClass('m-login--signin');

                    login.addClass('m-login--signup');
                }
                window.onload = () => {
                    {% if ancre == 'register' %}
                    displaySignUpForm();
                    {% endif %}
                }
            </script>
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
